{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "lib",
    "removeComments": true,

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": false,
    "jsx": "react",

    "declaration": true,
    "declarationDir": "types",

    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise",
      "es2015.reflect",
      "es2016.array.include",
      "es2017.object",
      "es2017.string",
      "es2017.typedarrays",
      "es2018.promise",
      "es2019.array",
      "es2019.symbol",
      "es2020.string"
    ]
  },
  "exclude": [
    "dist",
    "lib",
    "official-lib-declarations",
    "node_modules",
    "types"
  ]
}